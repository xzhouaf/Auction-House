<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    >
    <ImageView
        android:id="@+id/bHistoryItemImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:maxHeight="16dp"
        android:maxWidth="16dp"
        android:scaleType="fitXY"

        />
    <TextView
        android:id="@+id/bHistoryEntryItemName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="item name"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/bHistoryItemImage"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/bHistoryItemImage"
        android:layout_marginLeft="5dp" />
    <TextView
        android:id="@+id/bHistorySellerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GAO Zihou"
        android:textSize="12sp"
        android:textColor="#ff6964ff"
        android:layout_above="@+id/linearLayout"
        android:layout_toRightOf="@+id/sellerTag"
        android:layout_toEndOf="@+id/sellerTag" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:weightSum="1"
        android:layout_alignBottom="@+id/bHistoryItemImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="105dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete at:"
            android:id="@+id/timeTag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bHistoryTime"
            android:layout_weight="0.58"
            android:text="111" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99.99"
        android:id="@+id/bHistoryEntryPrice"
        android:textSize="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posted by :"
        android:id="@+id/sellerTag"
        android:layout_above="@+id/linearLayout"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout" />

</RelativeLayout>