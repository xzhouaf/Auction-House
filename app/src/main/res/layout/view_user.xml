<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffebebeb">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/me_portrait"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_margin="30dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="New Text"
        android:id="@+id/ViewUserName"
        android:layout_marginTop="40dp"
        android:textSize="22dp"
        android:background="#ffffffff"
        android:layout_marginLeft="151dp"
        android:layout_marginStart="151dp"
        android:layout_alignTop="@+id/me_portrait"
        android:layout_alignLeft="@+id/me_portrait"
        android:layout_alignStart="@+id/me_portrait" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/phoneInfo"
        android:background="#ffffffff"
        android:layout_below="@+id/me_portrait"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="contact number:"
            android:id="@+id/phoneTag"
            android:layout_marginLeft="20dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/ViewPhoneNumber"
            android:layout_marginLeft="30dp"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:id="@+id/emailInfo"
        android:background="#ffffffff"
        android:layout_below="@+id/me_portrait"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="139dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:     "
            android:id="@+id/emailTag"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/me_portrait"
            android:layout_alignStart="@+id/me_portrait"
            android:layout_marginLeft="20dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/ViewEmailAddress"
            android:layout_marginLeft="15dp"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>