<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp" android:layout_height="wrap_content"
    android:background="#2dfcff29">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/livebid_entry_relative"
        android:background="#ffffffff">


        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="ZHOU"
            android:id="@+id/bidlist_entry_buyer"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#ff6964ff"
            android:textStyle="italic" />



        <TextView
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:text="$1000.0"
            android:id="@+id/bidlist_entry_price"
            android:layout_alignBottom="@+id/bidlist_entry_time"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="25dp"
            android:textColor="#ffff3300"
            android:textStyle="bold" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:text="2009-10-31 20:35:50"
            android:id="@+id/bidlist_entry_time"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="10dp" />
    </RelativeLayout>
</RelativeLayout>