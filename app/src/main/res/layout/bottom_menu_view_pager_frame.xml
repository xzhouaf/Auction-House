<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/top_title_relative"
        android:background="#ff628bff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Auction House"
            android:id="@+id/vp_frame_title"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="#ffffffff" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/internal_view_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:flipInterval="30"
        android:persistentDrawingCache="animation"
        android:layout_above="@+id/relativeLayout2"
        android:layout_below="@+id/top_title_relative" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:clickable="false"
        android:background="#ffd27e2c"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout2">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#ffe9e31d"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="65dp"
            android:layout_height="fill_parent"
            android:id="@+id/new_item_touch_vp"
            android:focusableInTouchMode="true"
            android:gravity="center_horizontal"
            android:background="#fffdff29">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/imageView"
                android:src="@drawable/chuizi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:id="@+id/textView" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="65dp"
            android:layout_height="fill_parent"
            android:id="@+id/post_item_touch_vp"
            android:layout_marginLeft="65dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/imageView"
                android:src="@drawable/chuizi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post"
                android:id="@+id/textView" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="65dp"
            android:layout_height="fill_parent"
            android:id="@+id/search_touch_vp"
            android:layout_marginLeft="130dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/imageView"
                android:src="@drawable/chuizi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:id="@+id/textView" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="65dp"
            android:layout_height="fill_parent"
            android:id="@+id/live_touch_vp"
            android:layout_marginLeft="195dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/imageView"
                android:src="@drawable/chuizi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live"
                android:id="@+id/textView" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="65dp"
            android:layout_height="fill_parent"
            android:id="@+id/me_touch_vp"
            android:layout_marginLeft="260dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:id="@+id/imageView"
                android:src="@drawable/chuizi" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Me"
                android:id="@+id/textView" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>