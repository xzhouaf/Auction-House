<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffdcdcdc"
        android:id="@+id/itemNameSearch">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/searchIcon"
            android:src="@drawable/brownchuizi"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="24dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/searchInput"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:hint="Search here"
            android:layout_marginLeft="10dp"
            android:textColor="#ff000000" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/itemNameSearch"
        android:id="@+id/categorySearch"
        android:weightSum="1"
        android:background="#ffffffff">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="  Category selection:"
            android:id="@+id/textView2"
            android:layout_below="@+id/itemNameSearch"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="42dp"
            android:textSize="20dp"
            android:background="#ffebebeb" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/searchCategorySel"
            android:layout_below="@+id/itemNameSearch"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="42dp"
            android:layout_weight="0.36"
            android:layout_marginRight="5dp" />

    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Search"
        android:id="@+id/searchButton"
        android:textSize="18sp"
        android:layout_below="@+id/categorySearch"
        android:layout_alignRight="@+id/itemNameSearch"
        android:layout_alignEnd="@+id/itemNameSearch"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#ff417eff"
        android:textStyle="bold"
        android:textColor="#ffffffff" />

</LinearLayout>